}

/* ==========================================
   COORDINATE COLORS FOR ALL THEMES
   ========================================== */
/* Light squares coordinates */
[class*="theme-"] .orientation-white .ranks :nth-child(even),
[class*="theme-"] .orientation-white .files :nth-child(odd),
[class*="theme-"] .orientation-black .ranks :nth-child(odd),
[class*="theme-"] .orientation-black .files :nth-child(even) {
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
}

/* Dark squares coordinates */
[class*="theme-"] .orientation-white .ranks :nth-child(odd),
[class*="theme-"] .orientation-white .files :nth-child(even),
[class*="theme-"] .orientation-black .ranks :nth-child(even),
[class*="theme-"] .orientation-black .files :nth-child(odd) {
  color: rgba(0, 0, 0, 0.8);
  text-shadow: 1px 1px 1px rgba(255,255,255,0.3);
}