  background: radial-gradient(transparent 0%, transparent 80%, rgba(156, 39, 176, 0.2) 80%);
}

[class*="theme-"] cg-board square.move-dest:hover {
  transform: scale(1.02);
  transition: transform 0.1s ease;
}

[class*="theme-"] cg-board square.check {
